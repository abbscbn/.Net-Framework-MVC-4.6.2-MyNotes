<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Blog Home - Start Bootstrap Template</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Core theme CSS (includes Bootstrap)-->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!--<link href="css/styles.css" rel="stylesheet" />-->
    <!--benim yazdığım custom css override edebilmesi için aşağıda olması gerekir-->
    <link href="~/Content/Site.css" rel="stylesheet" />
    <!--<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>-->
    <!-- Core theme JS-->

    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <!--buradaki ekleme sırası jquery ilk önce olacak çünkü, bootstrap jquery e bağlıdır ilk önce onun tanımlanması gerekir-->

    <script src="~/Scripts/bootstrap.min.js"></script>

    <!--varsa en aşağıda custom js eklenir-->
</head>
<body>
    <!-- Responsive navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#!">MyNotes Project</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="bi bi-tools"></i> Yönetim Paneli
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="bi bi-chat-heart-fill"></i> En beğenilenler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#!">
                            <i class="bi bi-calendar2-check"></i> Son Yazılanlar
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#!">
                            <i class="bi bi-info-circle"></i> Hakkımızda
                        </a>
                    </li>

                </ul>
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="#"><i class="bi bi-person-circle"></i> Üye Ol</a></li>
                    <li class="nav-item"><a class="nav-link" href="#"><i class="bi bi-box-arrow-in-right"></i> Giriş</a></li>
                    <li class="nav-item"><a class="nav-link" href="#!"><i class="bi bi-person-circle"></i> #Kullanıcı</a></li>
                    <li class="nav-item"><a class="nav-link" href="#!"><i class="bi bi-box-arrow-left"></i> Çıkış</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Page header with logo and tagline-->
    <header class="py-5 bg-light border-bottom mb-4">
        <div class="container">
            <div class="text-center">
                <h1 class="fw-bolder">Welcome to Blog Home!</h1>

            </div>
        </div>
    </header>
    @RenderBody();
    <!-- Footer-->
    <footer class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4" style="text-align:center">
                    <h5><strong >Site Haritası</strong></h5>
                    <hr />
                    <p><a href="#"><i class="bi bi-chat-heart-fill mx-1"></i>En Beğenilenler</a></p>
                    <p>
                        <a href="#"> <i class="bi bi-calendar2-check mx-1"></i>Son Yazılanlar</a>
                    </p>
                    <p>
                        <a href="#"><i class="bi bi-info-circle mx-1"></i>Hakkımızda</a>
                    </p>
                </div>
                <div class="col-md-4">
                    <h5 style="text-align:center"><strong>Başlıklar</strong></h5>
                    <hr />
                    <p class="m-0 text-center">Tüm Hakları Saklıdır @DateTime.Now.Year</p>
                </div>
                <div class="col-md-4">
                    <h5 style="text-align:center"><strong>E-Bülten</strong></h5>

                    <hr />
                    <p class="text-center" style="font-size:small">
                        Hakkımızda haberlere ulaşmak için E-bültene kayıt olun
                    </p>
                    <div class="input-group mb-3">

                        <input type="text" class="form-control" placeholder="E-mail adresinizi giriniz" aria-label="Recipient’s username" aria-describedby="button-addon2">
                        <button class="btn btn-primary" type="submit" id="button-addon2"><i class="bi bi-send"></i> Gönder</button>
                    </div>
                </div>
            </div>
        </div>
        
    </footer>
    <!-- Bootstrap core JS-->

</body>
</html>
